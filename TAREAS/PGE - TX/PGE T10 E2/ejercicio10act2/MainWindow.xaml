<Window x:Class="SimpleDrawingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Drawing App" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Controls for line color and thickness -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Color:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox Name="colorPicker" Width="100" SelectedIndex="0" SelectionChanged="colorPicker_SelectionChanged">
                <ComboBoxItem Content="Black"/>
                <ComboBoxItem Content="Red"/>
                <ComboBoxItem Content="Green"/>
                <ComboBoxItem Content="Blue"/>
            </ComboBox>

            <TextBlock Text="Thickness:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <Slider Name="thicknessSlider" Minimum="1" Maximum="10" Value="2" Width="100"/>
        </StackPanel>

        
        <Canvas Name="drawingCanvas" Background="White" Grid.Row="1"
                MouseDown="drawingCanvas_MouseDown"
                MouseMove="drawingCanvas_MouseMove"
                MouseUp="drawingCanvas_MouseUp"/>
    </Grid>
</Window>
